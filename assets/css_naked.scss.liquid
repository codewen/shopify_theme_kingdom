// Some theme variables

$headingsFont: {{ settings.typography_headings }};
$bodyFont: {{ settings.typography_body }};
$mainButtons: {{ settings.button_color }};
$secondaryButtons: {{ settings.button_dark }};
$linksColor: {{ settings.type_links }};
$formsBack: {{ settings.form_back }};
$formsStyle: {{ settings.form_style }};
$formsBorder: {{ settings.form_border }};
$formsLabel: {{ settings.form_label }};

%coloranim {
	-webkit-transition: color 150ms linear, background-color 150ms linear, fill 150ms linear, 150ms opacity linear;
	transition: color 150ms linear, background-color 150ms linear, fill 150ms linear, 150ms opacity linear;
}

@function set-button-text-color( $color ) {
	@if ( lightness( $color ) > 55 ) {
		@return #000;
	} @else {
		@return #fff;
	}
}

// General styles applied to the naked layout

html, body {
	background: #fff;
	text-align: center;
	height: 100%;
	font: 14px/24px $bodyFont;
}
body > div:not('#password-content-wrapper') {
	position: relative;
	min-height: 100%;
	float: left;
	width: 100%;
}

.wrapper {
	max-width: 980px;
	width: 100%;
	margin: auto;
	padding-bottom: 110px;
}

.naked-title {

	font: bold 36px/36px $headingsFont;
	margin-top: 110px;

	a {
		color: #1d1d1d;
		&:hover {
			color: $linksColor;
		}
	}

}

.content-holder {
	background: #f6f6f6;
	border: 1px solid #ededed;
	border-radius: 10px;
	margin: 70px 0 200px;
}

.content-title {
	font: 16px/16px $headingsFont;
	color: #1d1d1d;
	text-transform: uppercase;
	margin: 32px 0 29px;
}

.footer {
	font: 12px/18px $bodyFont;
	color: #7d7d7d;
	font-weight: 600;
	width: 100%;
	height: 110px;
	padding: 36px 0 26px;
	position: relative;
	bottom: 0;
	left: 0;
}

a {
	color: $linksColor;
	&:hover {
		color: desaturate(lighten($linksColor, 15%), 15%);
	}
	@extend %coloranim;
}

p {
	margin-bottom: 4px;
	&:empty {
		display: none;
	}
}

@media all and (max-width: 1020px) {

	.wrapper {
		width: 100%;
		padding: 0 20px;
	}
	.naked-title {
		margin-top: 60px;
	}
	.content-holder {
		margin: 60px 0 120px;
	}
	#QrCode {
		top: -100px;
	}

}

// Gift card styles

.card-background {
	width: 100%;
	height: 220px;
	background-color: #444;
	background-size: cover;
	background-position: center center;
	background-repeat: none;
	position: relative;
	color: #fff;
}
.card-value {

	font: bold 140px/220px $headingsFont;
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;

	.disabled {
		opacity: .05;
		filter: alpha(opacity=5);
	}

}
.card-left {
	font: bold 70px/220px $headingsFont;
}

.card-content {
	padding: 0 20px;
}
.card-code {
	font: bold 36px/36px $headingsFont;
	color: #1d1d1d;
	margin: 70px 0 10px;
}
.card-text {

	font: 15px/22px $bodyFont;
	color: #7d7d7d;
	font-weight: 500;

	strong {
		font-weight: bold;
	}

}

.card-actions {
	margin: 35px 0 75px;
}
a.button, input[type="submit"] {

	background: $mainButtons;
	font: bold 13px/13px $headingsFont;
	text-transform: uppercase;
	border-radius: $formsStyle;
	height: 56px;
	padding-top: 21px;
	color: #fff !important;
	border: none;
	cursor: pointer;
	padding: 21px 25px;
	display: inline-block;
	margin: 0 8px 15px;
	@extend %coloranim;

	&:hover {
		background: desaturate(lighten($mainButtons, 7%), 10%);
	}

	&.dark {
		background: $secondaryButtons;
		&:hover {
			background: desaturate(lighten($secondaryButtons, 15%), 15%);
		}
	}

}

a.button.aw {

	padding: 0;
	overflow: hidden;
	width: 175px;
	height: 56px;
	position: relative;
	display: inline-block;
	top: 39px;

	img {
	    height: 98px;
	    width: 189px;
	    position: absolute;
	    top: -21px;
	    left: -8px;
	}

}

#QrCode {
	position: relative;
	top: -120px;
	text-align: center;
	img {
		display: inline !important;
	}
}

@media all and (max-width: 740px) {

	.card-background {
		height: 180px;
	}
	.card-value {
		font-size: 90px;
		line-height: 180px;
	}
	.card-left {
		font-size: 40px;
		line-height: 180px;
	}
	.card-code {
		font-size: 26px;
		margin-top: 40px;
	}
	.card-actions {
		margin-bottom: 40px;
	}

}

@media print {
	.card-actions, .footer {
		display: none;
	}
	.card-text {
		margin-bottom: 32px;
	}
}

// Password protected store styles

#password-content-wrapper {

	min-height: 100%;
	padding-top: 120px;
	margin-bottom: -90px;

	&:after {
		content: "";
		display: block;
		height: 90px;
	}

}

#password-header {

	h1 {

		font: bold 30px/30px $headingsFont;
		font-weight: 700;
		text-transform: uppercase;

		a {
			color: #000;
		}

	}

	.logo-img img {
		max-width: {{settings.logo_width}}px;
		height: auto;
	}

}

.password-login {

	position: absolute;
	top: 0;
	right: 0;
	font-size: 15px;
	font-weight: 600;
	padding: 40px 60px 0 0;

	svg {
		width: 16px;
		height: 16px;
		position: relative;
		top: 1px;
		left: -10px;
		* {
			fill: #000;
		}
	}

}

#password-content {

	padding-top: 90px;

	h2 {
		color: #000;
		font: 26px/34px $headingsFont;
		text-transform: uppercase;
	}

	.text {
		margin-top: 20px;
		font-size: 15px;
		line-height: 25px;
		color: #7d7d7d;
		font-weight: 500;
	}

	hr {
		width: 37px;
		height: 1px;
		border: none;
		background: #e3e3e3;
		margin: 14px auto;
	}

}

.password-form-heading {
	font-size: 12px;
	line-height: 18px;
	font-weight: 600;
	color: #999;
}
.hidden-label {
	display: none;
}

.password-input-group {

	width: 425px;
	margin: 30px auto 35px;

 	input[type="text"], input[type="password"] {

 		float: left;
		background: #fff;
		border: 1px solid #ddd;
		color: #a9a9a9 !important;
		height: 56px;
		font: 500 15px/56px $bodyFont;
		border-radius: $formsStyle;
		box-shadow: none;
		padding: 0 18px;
		margin: 0;
		width: calc(100% - 125px);
		border-top-right-radius: 0;
		border-bottom-right-radius: 0;
		-webkit-appearance: none;

		.ie8 & {
			width: 68%;
			margin-right: 10px;
		}

    }

    input[type="submit"] {

		background: $mainButtons;
		font: bold 13px/13px $headingsFont;
		text-transform: uppercase;
		border-radius: $formsStyle;
		height: 56px;
		color: set-button-text-color($mainButtons) !important;
		box-shadow: none;
		border: none;
		cursor: pointer;
		padding: 0 25px;
		width: 125px;
		margin: 0 0 0 -1px;
		border-top-left-radius: 0;
		border-bottom-left-radius: 0;
		-webkit-appearance: none;

		&:hover {
			background: desaturate(lighten($mainButtons, 7%), 10%);
		}

    }

    .errors {
    	margin-top: 10px;
    	text-align: left;
    	padding-left: 18px;
    	font-size: 11px;
    	color: #cc3300;
    	font-weight: 600;
    }

}

#password-sharing {

	.share-on-pinterest {
		display: none;
	}

	a {

		color: #9d9d9d;
		font-size: 20px;
		line-height: 16px;
		margin: 15px 10px;
		display: inline-block;
		@extend %coloranim;

		&:hover {
			color: $linksColor;
		}

	}

}

#password-footer {

	width: 100%;
	font-size: 12px;
	line-height: 18px;
	color: #7d7d7d;
	font-weight: 600;
	height: 90px;
	padding-top: 20px;

	svg {

		width: 80px;
		height: 20px;
		position: relative;
		top: 4px;
		left: 4px;

		* {
			fill: #646464;
		}
		#password-footer a:hover & * {
			fill: $linksColor;
		}

	}

	.shopify-name {
		display: none;
	}
} 

#login-modal {

	text-align: center;

	h4 {
		color: #000;
		font: 18px/24px $headingsFont;
		text-transform: uppercase;
	}

}

@media all and (max-width: 480px) {

	.password-input-group {

		width: 300px;
		margin: 30px auto 35px;

	 	input[type="text"], input[type="password"] {
	 		width: calc(100% - 100px);
	 	}

	 	input[type="submit"] {
	 		width: 100px;
	 		font-size: 12px;
	 	}

	}

}

