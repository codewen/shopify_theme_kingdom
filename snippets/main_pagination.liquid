<ul class="main-pagination">

	{% if paginate.previous %}
		<li class="arrow prev"><a href="{{ paginate.previous.url }}" title="{{ paginate.previous.title }}">&larr;</a></li>
	{% endif %}

	{% for part in paginate.parts %}
		{% if part.is_link %}
			<li><a href="{{ part.url }}" title="">{{ part.title }}</a></li>
		{% else %}
			{% if part.title == paginate.current_page %}
				<li class="active"><span>{{ part.title }}</span></li>
			{% else %}
				<li><span>{{ part.title }}</span></li>
			{% endif %}
		{% endif %}
	{% endfor %}

	{% if paginate.next %}
		<li class="arrow"><a href="{{ paginate.next.url }}" title="{{ paginate.next.title }}">&rarr;</a></li>
	{% endif %}

</ul>