<div class="meta">
	<h2>{{ product.title }}</h2>
	<h5><span>{{ 'general.prefixes.by' | t }}</span>{{ product.vendor }}</h5>
</div>

<div class="price">
	{% if product.price_varies %} 
		{{ 'products.grid.from_text' | t }} 
	{% endif %}
	<strong>{{ product.price | money }}</strong>

	{% if on_sale %}
		<span class="info">{{ product.compare_at_price | money }}</span>
	{% else %}
		<span class="info" style="text-decoration: none">&nbsp;</span>
	{% endif %}
	
</div>